<header class='header'>
  <div class='header-container'>
    <a class='header__link header__link--main' href='/'>
      Blog
    </a>

    <nav>
      <ul class='header__list'>
        {{#if isAuth}}
          {{#if isAdmin}}
            <li>
              <a class='header__link' href='/users'>Users</a>
            </li>
          {{/if}}
          <li>
            <a class='header__link' href='/home'>Posts</a>
          </li>
          <li>
            <button
              class='header__link header__link--btn'
              name='logout'
            >Logout</button>
          </li>
        {{else}}
          <li>
            <a class='header__link' href='/login'>Login</a>
          </li>
          <li>
            <a class='header__link' href='/signup'>Signup</a>
          </li>
        {{/if}}

      </ul>
    </nav>
  </div>
</header>